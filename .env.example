
# GitHub Configuration (Required)
VITE_GITHUB_OWNER=your-github-username
VITE_GITHUB_REPO=your-repo-name
VITE_GITHUB_TOKEN=your-github-personal-access-token

# Cloudinary Configuration (Required for media upload)
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
VITE_CLOUDINARY_API_KEY=your-api-key
VITE_CLOUDINARY_API_SECRET=your-api-secret

# SMTP Configuration (Required for email functionality)
VITE_SMTP_ENDPOINT=https://your-smtp-service.com/send
VITE_SMTP_FROM=no-reply@schoolportal.top

# Optional: Custom domain configuration
VITE_APP_DOMAIN=schoolportal.top

# Development/Production Environment
NODE_ENV=development

# AI Configuration (Gemini 2.5-flash)
VITE_GEMINI_API_KEY_1=your-primary-gemini-api-key
VITE_GEMINI_API_KEY_2=your-secondary-gemini-api-key
VITE_GEMINI_API_KEY_3=your-tertiary-gemini-api-key
VITE_GEMINI_MODEL=gemini-2.5-flash
VITE_AI_RATE_LIMIT_PER_MINUTE=10
VITE_AI_REQUEST_TIMEOUT=30000

# WebRTC Configuration (for Live Classes)
VITE_WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
VITE_WEBRTC_TURN_SERVER=turn:your-turn-server.com:3478
VITE_WEBRTC_TURN_USERNAME=your-turn-username
VITE_WEBRTC_TURN_CREDENTIAL=your-turn-credential

# Real-time Features (WebSocket/Socket.IO)
VITE_WEBSOCKET_URL=ws://localhost:3001
VITE_SOCKET_IO_URL=http://localhost:3001

# LMS Configuration
VITE_LMS_MAX_FILE_SIZE=100MB
VITE_LMS_ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,mp4,mp3,jpg,jpeg,png,gif
VITE_LMS_SESSION_TIMEOUT=3600000

# Font Configuration
VITE_GOOGLE_FONTS_API_KEY=your-google-fonts-api-key

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
